<h1> Are these details correct</h1>

<h3>Name:</h3>
  <p> <%= @user.name %></p>
<h3>Email:</h3>
  <p> <%= @user.email %></p>
  
<%= form_for @user do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :password %>
  <%= f.hidden_field :password_confirmation %>
  <%= f.submit "Confirm", class: 'btn btn-success' %>
  <%= button_to "Decline", {controller: "users", action: "new"}, class: "btn btn-danger", method: :get %>
<% end %>
